<Page x:Class="fabric_BankWPF.ChooseAccessLVL"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:fabric_BankWPF"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ChooseAccessLVL">

    <Border Background="White" BorderBrush="AliceBlue" BorderThickness="4" CornerRadius="40" >
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Выберите уровень доступа" Margin="5"/>

            <ComboBox x:Name="ComboBoxAccessLVL" ItemsSource="{Binding Dolgnost}" SelectedItem="{Binding SelectedDolgnost}"
                      SelectionChanged="ComboBoxAccessLVL_SelectionChanged" SelectedValue="{Binding SelectedDolgnost}">
            </ComboBox>



        </StackPanel>

    </Border>
</Page>
